<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SG_MAUI_RamSerDav_.MVVM.Views.LoginView"
             Title="LoginView">
    <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="20">
        <!-- Imagen, Elige una imagen -->
        <Image Source="algooo.jpg" Aspect="AspectFit" HeightRequest="200" />

        <!-- Logica de Texto -->
        <Entry Placeholder="Username" Text="{Binding usuarioActual.Email}" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding usuarioActual.Password}" />

        <!-- Botones -->
        <Button Text="Aceptar" Command="{Binding aceptarCommand}" IsEnabled="{Binding estaHabilitado}" />
        <Button Text="Limpiar" Command="{Binding limpiarCommand}" />
    </StackLayout>
</ContentPage>