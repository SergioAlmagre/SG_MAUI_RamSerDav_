<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SG_MAUI_RamSerDav_.MVVM.Views.LoginView"
             Title="LoginView">
    <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="20">
        <!-- Images Choose Image -->
        <Image Source="algooo.jpg" Aspect="AspectFit" HeightRequest="200" />

        <!-- Text Logic -->
        <Entry Placeholder="Username" Text="{Binding Username}" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />

        <!-- Buttons -->
        <Button Text="Accept" Command="{Binding AcceptCommand}" IsEnabled="{Binding AcceptEnabled}" />
        <Button Text="Clear" Command="{Binding ClearCommand}" />
    </StackLayout>
</ContentPage>
